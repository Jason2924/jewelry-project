@model IEnumerable<Project_Sem_3.Models.StoneMst>
@{
    ViewBag.Title = "Search";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Stones</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Html.ActionLink("Create New", "Create")</h3>

        <div class="card-tools">
            @using (Html.BeginForm("Search", "Stone", FormMethod.Post))
            {
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" name="key" class="form-control float-right" placeholder="Search Customer...">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0" style="max-height: 500px">
        <table class="table table-head-fixed text-nowrap">
            <thead>
                <tr>
                    <th>Style Code</th>
                    <th>Stone Type</th>
                    <th>Quality</th>
                    <th>Carat</th>
                    <th>Dimension</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemMst.StyleCode</td>
                        <td>@item.StoneTypeMst.Name</td>
                        <td>@item.StoneQualityMst.Quality</td>
                        <td>@item.Carat</td>
                        <td>@item.Dimension</td>
                        <td>@item.Amount</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
