@model Project_Sem_3.Models.ItemMst
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-cube nav-icon"></i>
            Item
        </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-7">
                <dl class="row">
                    <dt class="col-sm-4">Style Code</dt>
                    <dd class="col-sm-8">@Model.StyleCode</dd>
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    <dt class="col-sm-4">Number in set</dt>
                    <dd class="col-sm-8">@Model.NumberInSet</dd>
                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>
                    <dt class="col-sm-4">Gold Karat</dt>
                    <dd class="col-sm-8">@Model.GoldKarat</dd>
                    <dt class="col-sm-4">Gold Weight</dt>
                    <dd class="col-sm-8">@Model.GoldWeight</dd>
                    <dt class="col-sm-4">Wastage</dt>
                    <dd class="col-sm-8">@Model.Wastage</dd>
                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.Price</dd>
                    <dt class="col-sm-4">MRP</dt>
                    <dd class="col-sm-8">@Model.MRP</dd>
                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                    <dt class="col-sm-4">Brand</dt>
                    <dd class="col-sm-8">@Model.BrandMst.Name</dd>
                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.CategoryMst.Name</dd>
                    <dt class="col-sm-4">Certificate</dt>
                    <dd class="col-sm-8">@Model.CertificateMst.Type</dd>
                </dl>
            </div>
            <div class="col-md-5">
                <dl>
                    <dt>Image</dt>
                    <dd><img src="~/Content/images/product/@Model.Image" height="360" alt="@Model.Image" /></dd>
                </dl>
            </div>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<h2>Item's Stones</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Html.ActionLink("Create New", "Create", "Stone", new { itemId = Model.ID, itemStyleCode = Model.StyleCode }, null)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0" style="max-height: 500px">
        <table class="table table-head-fixed text-nowrap">
            <thead>
                <tr>
                    <th>Stone Type</th>
                    <th>Quality</th>
                    <th>Carat</th>
                    <th>Dimension</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StoneMsts)
                {
                    <tr>
                        <td>@item.StoneTypeMst.Name</td>
                        <td>@item.StoneQualityMst.Quality</td>
                        <td>@item.Carat</td>
                        <td>@item.Dimension</td>
                        <td>@item.Amount</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Stone", new { id = item.ID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Stone", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<h2>Item's Discounts</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Html.ActionLink("Create New", "Create", "Discount", new { styleCode = Model.StyleCode }, null)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0" style="max-height: 300px">
        <table class="table table-head-fixed text-nowrap">
            <thead>
                <tr>
                    <th>Percentage</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DiscountMsts)
                {
                    <tr>
                        <td>@item.Percentage</td>
                        <td>@item.Description</td>
                        <td>@item.StartDate.Value.ToShortDateString()</td>
                        <td>@item.EndDate.Value.ToShortDateString()</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Discount", new { id = item.ID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Discount", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
