@model Project_Sem_3.Models.InquiryMst
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-question-circle nav-icon"></i>
            Inquiry
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">From</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.Value.ToShortDateString()</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                    <dt class="col-sm-4">City</dt>
                    <dd class="col-sm-8">@Model.City</dd>
                    <dt class="col-sm-4">Country</dt>
                    <dd class="col-sm-8">@Model.Country</dd>
                </dl>
            </div>
        </div>
        <dl>
            <dt>Content</dt>
            <dd>@Model.Content</dd>
        </dl>
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
    <!-- /.card-body -->
    <div class="card-footer row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-sm-6"></div>
                @{
                    if (Model.Status == false)
                    {
                        using (Html.BeginForm("ChangeStatus", "Inquiry", FormMethod.Post, new { @class = "col-sm-6" }))
                        {
                            <input type="hidden" name="inquiryId" value="@Model.ID" />
                            <input type="hidden" name="status" value="true" />
                            <button type="submit" class="btn btn-block btn-success btn-lg">Mark as Read</button>
                        }
                    }
                    else
                    {
                        using (Html.BeginForm("ChangeStatus", "Inquiry", FormMethod.Post, new { @class = "col-sm-6" }))
                        {
                            <input type="hidden" name="inquiryId" value="@Model.ID" />
                            <input type="hidden" name="status" value="false" />
                            <button type="submit" class="btn btn-block btn-danger btn-lg">Unread</button>
                        }
                    }
                }
            </div>
        </div>
    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->