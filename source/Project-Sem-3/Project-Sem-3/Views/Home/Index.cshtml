@using Project_Sem_3.Models
@{
    ViewBag.Title = "Home Page";
}
@section css {
    <link rel="stylesheet" href="~/Content/user/Index.css">
}
@section js {
    <script src="~/Scripts/user/index.js"></script>
}
<div class="slide">
    <a href="@Url.Action("Index", "Product")">
        <img src="~/Content/images/banner.png" alt="">
    </a>
</div>
<div class="product-roller">
    <h3 class="product-roller__title">
        <span class="product-roller__title-text text">Latest Products</span>
    </h3>
    <div class="product-roller__box swiper-container latest-products">
        <div class="swiper-wrapper">
            <!-- Item Start -->
            @{
                foreach (var product in ViewBag.Latest)
                {
                    <div class="item swiper-slide">
                        <div class="item__box">
                            <div class="item__image">
                                <a href="@Url.Action("Index", "ProductDetail", new { id = product.Item.ID })">
                                    <img src="~/Content/images/product/@product.Item.Image" alt="@product.Item.Name">
                                </a>
                            </div>
                            <div class="item__information">
                                <div>
                                    <a class="link link--second" href="@Url.Action("Index", "ProductDetail", new { id = product.Item.ID })">@product.Item.Name</a>
                                </div>
                                <div class="text text--second">
                                    @{
                                        if (product.Item.Price > 0)
                                        {
                                            if (product.Discount <= 0)
                                            {
                                                <span>$@product.Item.Price</span>
                                            }
                                            else
                                            {
                                                <span>$@product.Sale <small><del>$@product.Item.Price</del></small></span>
                                            }
                                        }
                                        else
                                        {
                                            <span>Contact us</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            <!-- Item End -->
        </div>
    </div>
</div>

