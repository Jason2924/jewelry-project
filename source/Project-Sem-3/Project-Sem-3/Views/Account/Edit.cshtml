@model Project_Sem_3.Models.UserMst
@section css {
    <link rel="stylesheet" href="~/Content/user/ACcount.css">
}
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="breadcrumb">
    <ul class="breadcrumb__container">
        <li class="breadcrumb__list">
            <a class="link" href="@Url.Action("Index","Home")">Home</a>
        </li>
        &nbsp;|&nbsp;
        <li class="breadcrumb__list">
            <span class="text text--second">Edit</span>
        </li>
    </ul>
</nav>
<div class="title-box">
    <div class="title-box__container">
        <h1 class="text title-box__text">Edit</h1>
    </div>
</div>
<div class="account">
    <div class="account__container">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form form--register" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)
            <div class="text text--fourth center" style="margin-bottom: 20px;">
                @ViewBag.Error
            </div>
            <div class="form__container">
                <div class="form__row">
                    <span class="text">Username :</span>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @required = "required", @readonly = "true" } })
                </div>
                <div class="form__error text--fourth">
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
            </div>
            <div class="form__box">
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">Password :</span>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @Value = "" } })
                    </div>
                    <div class="form__error text--fourth">
                        <span>@ViewBag.Password</span>
                    </div>
                </div>
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">Confirm :</span>
                        <input type="password" name="confirm">
                    </div>
                    <div class="form__error text--fourth">
                        <span>@ViewBag.Confirm</span>
                    </div>
                </div>
            </div>
            <div class="form__container">
                <div class="form__row">
                    <span class="text">Full Name :</span>
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @required = "required" } })
                </div>
                <div class="form__error text--fourth">
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
            </div>
            <div class="form__container">
                <div class="form__row">
                    <span class="text">Email :</span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @required = "required" } })
                </div>
                <div class="form__error text--fourth">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form__box">
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">Phone :</span>
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @required = "required" } })
                    </div>
                    <div class="form__error text--fourth">
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">Birthday :</span>
                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @required = "required", @type = "date" } })
                    </div>
                    <div class="form__error text--fourth">
                        @Html.ValidationMessageFor(model => model.Birthday)
                    </div>
                </div>
            </div>
            <div class="form__container">
                <div class="form__row">
                    <span class="text">Address :</span>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @required = "required" } })
                </div>
                <div class="form__error text--fourth">
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            
            <div class="form__box">
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">City :</span>
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @required = "required" } })
                    </div>
                    <div class="form__error text--fourth">
                        @Html.ValidationMessageFor(model => model.City)
                    </div>
                </div>
                <div class="form__container">
                    <div class="form__row">
                        <span class="text">Country :</span>
                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @required = "required" } })
                    </div>
                    <div class="form__error text--fourth">
                        @Html.ValidationMessageFor(model => model.Country)
                    </div>
                </div>
            </div>
            <div class="form__button">
                <a class="form__link link" href="@Url.Action("Profile", "Account")">Cancel</a>
                <button type="submit" class="button button-main">Save</button>
            </div>
        }
    </div>
</div>